<% if @new_book %>
  $('table tbody tr:first-child').removeClass("just_added");
  $('#form').html("<%= escape_javascript(render "form", :book => @new_book) %>")
  $('#form').prepend("<%= raw escape_javascript("<div class='alert alert-success'>The new book #{@book.title} was successfully created</div>") %>")
  $('table tbody').prepend("<%= escape_javascript(render 'table_row', :book => @book) %>")
  $('table tbody tr:first-child').addClass("just_added");
  $('#form .alert-success').fadeOut(3000, function(){
    $(this).remove();
  })
<% else %>
  $('#form').html("<%= escape_javascript(render "form", :book => @book) %>")
<% end %>